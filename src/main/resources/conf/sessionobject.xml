<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="SessionObject">
    <!-- 查询全部session -->
    <select id="allSession" resultType="DialogManagement.SessionObject">
        select * from realtimesession
    </select>
    <!-- 按照用户名和appname查询 -->
    <select id="sessionforbot" parameterType="hashmap" resultType="DialogManagement.SessionObject">
        select * from realtimesession where appname=#{appname} AND userid=#{userid}
    </select>
    <!-- 添加用户 -->
    <insert id="insertSession" parameterType="DialogManagement.SessionObject">
        insert into realtimesession values(#{appname},#{dmresultbeanlist},#{updatetime},#{userid},#{round})
    </insert>
    <!-- 修改用户 -->
    <update id="updateSession" parameterType="DialogManagement.SessionObject">
        update realtimesession set dmresultbeanlist=#{dmresultbeanlist},updatetime=#{updatetime},round=#{round} where sessionid=#{sessionid}
    </update>
    <!-- 删除用户 -->
    <delete id="deleteSession" parameterType="DialogManagement.SessionObject">
        delete  FROM  realtimesession where appname=#{appname} AND  userid=#{userid}
    </delete>
</mapper>